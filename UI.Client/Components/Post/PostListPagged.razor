@using Application.Dto.Wrappers
@using Application.ViewModels.Post
@using UI.Client.Pages

@rendermode RenderMode.InteractiveServer

<h1>Read posts!</h1>
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex flex-row justify-content-between align-items-center filters">
                <h6>Showing 666 posts</h6>
                <div class="right-sort">
                    <div class="sort-by"><span class="mr-1">Sort by:</span><a href="#">Most popular</a><i class="fa fa-angle-down ml-1"></i><button class="btn btn-outline-dark btn-sm ml-3 filter" type="button">Filters&nbsp;<i class="fa fa-flask"></i></button></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-1">
    @if (listPosts == null)
    {
        <p><em>Carregando...</em></p>
    }
    else
    {
        foreach (var item in listPosts)
        {
                <div class="col-md-4 post-card">
                    <div class="p-card bg-white p-2 rounded px-3">
                        <div class="d-flex align-items-center credits">
                            <img src="https://i.imgur.com/hlz6G90.png" width="16px"><span class="text-black-50 ml-2">1 credits</span>
                        </div>

                        <h5 class="mt-2">@item.Name</h5>

                        <span class="badge badge-danger py-1 mb-2">@item.Tags</span>

                        <span class="d-block mb-5">@((MarkupString)item.Html)</span>

                        <div class="d-flex justify-content-between stats">
                            <div><i class="fa fa-calendar-o"></i><span class="ml-2">1 days ago</span></div>
                            <div class="d-flex flex-row align-items-center">
                                <div class="profiles"><img class="rounded-circle" src="https://i.imgur.com/4nUVGjW.jpg" width="30"><img class="rounded-circle" src=" https://i.imgur.com/GHCtqgp.jpg" width="30"><img class="rounded-circle" src="https://i.imgur.com/UL0GS75.jpg" width="30"></div><span class="ml-3">12</span>
                            </div>
                        </div>
                    </div>
                </div>
        }
    }
    </div>
    <div class="d-flex justify-content-end text-right mt-2">
        <nav>
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" @onclick="() =>OpenPage(PageIndex - 1)" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>
                </li>
                @for (int i = 0; i < TotalPages; i++)
                {
                    var index = i + 1;
                    <li class="page-item">
                        <a class="page-link" @onclick="() =>OpenPage(index)">@(i + 1)</a>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link" @onclick="() =>OpenPage(PageIndex + 1)" aria-label="Next"><span aria-hidden="true">&raquo;</span></a>
                </li>                
            </ul>
        </nav>
    </div>
</div>
